{
    "version": 1,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)s: %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },
    "loggers": {
        "paranal_weather": {
            "handlers": ["console"],
            "level": "DEBUG"
        },
        "peewee": {
            "handlers": ["console"],
            "level": "WARNING"
        }
    }
}
